<div class="col-6">
  <div class="form-floating mb-3">

    <input
      type="text"
      class="form-control"
      id="floatingInput"
      value="{{this.first_name}}"
      placeholder="First Name"
      name="first_name"
      required
    />
    <label for="floatingInput">First Name</label>
  </div>
</div>

<div class="col-6">
  <div class="form-floating mb-3">

    <input
      type="text"
      class="form-control"
      id="floatingInput"
